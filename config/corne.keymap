#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        r-winkey {
            bindings = <&kp LEFT_GUI>;
            key-positions = <32 33>;
        };

        l-winkey {
            bindings = <&kp LEFT_WIN>;
            key-positions = <26 27>;
        };

        menu {
            bindings = <&kp C_MENU>;
            key-positions = <31 32>;
        };

        alt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <34 33>;
        };

        escape {
            bindings = <&kp ESCAPE>;
            key-positions = <0 1>;
        };

        delete {
            bindings = <&kp DELETE>;
            key-positions = <12 13>;
        };

        leftHandReturn {
            bindings = <&kp ENTER>;
            key-positions = <37 12>;
        };

        clearBT {
            bindings = <&bt BT_CLR>;
            key-positions = <11 10>;
            layers = <2>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0 {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp F           &kp P      &kp G    &kp J      &kp L  &kp U           &kp Y    &kp FSLH  &kp MINUS
&kp BSPC   &kp A  &kp R  &kp S           &kp T      &kp D    &kp H      &kp N  &kp E           &kp I    &kp O     &kp SQT
&kp LCTRL  &kp Z  &kp X  &kp C           &kp V      &kp B    &kp K      &kp M  &kp COMMA       &kp DOT  &kp SEMI  &kp LCTRL
                         &mt LSHFT CAPS  &kp SPACE  &mo 1    &kp ENTER  &mo 1  &mt LSHFT CAPS
            >;
        };

        layer_1 {
            bindings = <
&kp TAB    &kp TILDE       &kp LEFT_PARENTHESIS  &kp LEFT_BRACKET  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACKET    &kp LS(N8)  &kp LS(LEFT_BRACKET)  &kp EQUAL     &kp LS(RIGHT_BRACKET)  &kp SLASH  &kp MINUS
&kp BSPC   &kp N7          &kp N5                &kp NUMBER_3      &kp NUMBER_1           &kp NUMBER_9         &kp N0      &kp NUMBER_2          &kp NUMBER_4  &kp NUMBER_6           &kp N8     &kp LS(EQUAL)
&kp LCTRL  &kp LEFT_ARROW  &kp UP_ARROW          &kp DOWN          &kp RIGHT              &kp BACKSLASH        &kp GRAVE   &kp LS(NUMBER_1)      &kp COMMA     &kp PERIOD             &kp SEMI   &kp LCTRL
                                                 &kp LSHFT         &kp SPACE              &mo 0                &mo 2       &mo 0                 &kp LSHFT
            >;
        };

        layer_2 {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &none     &kp HOME  &none   &none      &none   &none     &none
&kp F11       &kp F7        &kp F5        &kp F3        &kp F1        &kp F9    &kp F10   &kp F2  &kp F4     &kp F6  &kp F8    &kp F12
&kp LCTRL     &kp LALT      &none         &none         &none         &none     &kp END   &none   &none      &none   &kp LALT  &kp LCTRL
                                          &kp LSHFT     &none         &none     &trans    &none   &kp LSHFT
            >;
        };
    };
};
